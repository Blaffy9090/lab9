@model Zakaz

@{
    ViewData["Title"] = "Edit";
}

<h1>Редактировать заказ</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ZakazId" />
            
            <div class="form-group">
                <label asp-for="TovarId" class="control-label"></label>
                <select asp-for="TovarId" class="form-control" asp-items="ViewBag.TovarId"></select>
                <span asp-validation-for="TovarId" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Kolichestvo" class="control-label"></label>
                <input asp-for="Kolichestvo" class="form-control" />
                <span asp-validation-for="Kolichestvo" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="DataZakaza" class="control-label"></label>
                <input asp-for="DataZakaza" type="datetime-local" class="form-control" />
                <span asp-validation-for="DataZakaza" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-id="@Model.TovarId">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}